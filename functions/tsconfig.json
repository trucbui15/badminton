{
  "compilerOptions": {
    "module": "esnext",                      
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",                      
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],                
    "jsx": "react-jsx"                     
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",                          
    "lib"                                  
  ]
}
